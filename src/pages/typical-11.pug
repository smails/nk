              +e.P.title.display-2 Войдите в личный кабинет
              +e.wrap
                +e.group
                  +e.name Номер телефона
                  +e.INPUT.field(placeholder="+7")
                +e.group
                  +e.name Код из SMS
                  +e.INPUT.field(placeholder="Код из SMS")
                +e.BUTTON.send.btn Войти
                +e.link(data-type="reset") Восстановить доступ
            +e.FORM.action
              +e.P.title.display-2 Восстановление доступа
              +e.wrap
                +e.group
                  +e.name Номер телефона
                  +e.INPUT.field(placeholder="+7")
