mixin finishing(title='Отделка', control, btn='_white', sign, video, slider)
  +b.finishing-tabs
    +e.inner.inner
      +e.head
        +e.H2.title=title
        +e.control
          +e.BUTTON.btn.btn(class=btn).active Комнаты и кухня
          +e.BUTTON.btn.btn(class=btn) Санузел
          +e.BUTTON.btn.btn(class=btn) Лоджия
          +e.BUTTON.btn.btn(class=btn) Окна в квартире
      +e.wrapper
        +e.box
          +e.row(class=control)
            if slider != undefined
              +e.slider
                .swiper
                  .swiper-wrapper
                    .swiper-slide
                      +e.IMG.pic(src='/img/finishing-2.png' alt='')
                    .swiper-slide
                      +e.IMG.pic(src='/img/finishing-2.png' alt='')
                    .swiper-slide
                      +e.IMG.pic(src='/img/finishing-2.png' alt='')
                  .slider-arrows
                    +b.slider-arrow_prev._gray
                      svg(xmlns='http://www.w3.org/2000/svg' width='8' height='12' fill='none')
                        path(stroke='#838C95' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6.48438.79102 1.27604 5.99935l5.20834 5.20835')
                    +b.slider-arrow_next._gray
                      svg(xmlns='http://www.w3.org/2000/svg' width='8' height='12' fill='none')
                        path(stroke='#838C95' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m1.51562.79102 5.20834 5.20833-5.20834 5.20835')
                  .slider-dots
            else
              +e.IMG.pic(src='/img/finishing-2.png' alt='')
            +e.content(class=control)
              +e.H2.caption Чистовая
              +e.line
                +e.P.holder Напольное покрытие
                +e.P.txt Керамогранит на кухне и в прихожей, ламинат 33 класса в жилых комнатах
              +e.line
                +e.P.holder Обои
                +e.P.txt Под покраску виниловые на флизелиновой основе
              +e.line
                +e.P.holder Потолок
                +e.P.txt Натяжной с выводом под люстру
              +e.line
